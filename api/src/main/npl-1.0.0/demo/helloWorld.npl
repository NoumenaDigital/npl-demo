package demo;

@api
protocol[innovator] HelloWorld() {

    initial state greeting;
    final state greeted;

    private var validNames = listOf("Alice", "Bob", "Charlie");

    @api
    permission[innovator] sayHello(name: Text) returns Text | greeting {
        require(
            validNames.contains(name),
            "Name must be part of the list of valid users"
        );
        become greeted;
        return "Hello " + name + "!";
    };
};
