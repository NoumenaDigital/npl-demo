package board

function getKrzysClaims() returns Party {
    // @start:simpleParty
    return partyOf(
        mapOf<Text, Set<Text>>( // entity
            Pair("company", setOf("cookieCompany"))
        ),
        mapOf<Text, Set<Text>>( // access
            Pair("name", setOf("Krzys")),
            Pair("roles", setOf("Chairman", "Board Member"))
        )
    );
    // @end:simpleParty
}

